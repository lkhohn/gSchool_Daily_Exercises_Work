<div class='row'>
  <div class='container'>
    <div class='col-md-10'>
      <div class="panel panel-default">
        <div class="panel-heading">BlueIt HOME</div>
        <table class="table" id="postDetails">
          <tr id="trHead">
            <td>ID</td>
            <td>Title</td>
            <td>Content</td>
            <td>Category</td>
            <td>Username</td>
            <td>Edit</td>
            <td>Delete</td>
          </tr>
          {{#each postDetails}}
            <tr>
              <td><a href='/{{this.id}}'>{{this.id}}</a>
              </td>
              <td>{{this.title}}
              </td>
              <td>{{this.content}}
              </td>
              <td><a href='/{{this.category}}'>{{this.category}}</a>
              </td>
              <td>{{this.username}}
              </td>
              {{#if sessionOwner}}
              <td><button type="submit" class="btn btn-default"><a href={{editLink}}>Edit</a></button>
              </td>
              <td>
                <form class="" action='{{deleteLink}}' method='post'>
                <button type="submit" class="btn btn-default"><a href={{deleteLink}}>Delete</a></button>
              </td>
              {{/if}}
              {{/each}}
            </tr>
        </table>
      </div>
    </div>
  </div>
</div>
