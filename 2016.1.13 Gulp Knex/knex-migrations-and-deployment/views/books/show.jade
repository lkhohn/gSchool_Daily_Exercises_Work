extends ../layout 

block content 
  if book
    div.well.well-lg
      h1= book.title 
      h3= book.author
      p Rating: #{book.rating}
      p= book.description 
      p 
        a.btn-link(href='/books/'+ book.id + '/edit') Edit
        form(action='/books/#{book.id}/delete' method='post')
          input.btn.btn-link(type='submit' value='Delete')
